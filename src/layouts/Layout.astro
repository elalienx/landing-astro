---
// Components
import Navigation from "../components/Navigation"

// Styles
import "@styles/base/variables.css"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Landing</title>
	</head>
	<body>
		<Navigation currentPath={Astro.url.pathname}/>
		<slot />
	</body>
</html>

<style>
	@font-face {
	font-family: "Circular Pro";
	src: url("/fonts/circular-pro-bold-subset.woff2");
	font-weight: 700;
	font-display: swap;
	}

	@font-face {
	font-family: "Circular Pro";
	src: url("/fonts/circular-pro-book-subset.woff2");
	font-weight: 500;
	font-display: swap;
	}


	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Circular Pro", Tahoma, Geneva, Verdana, sans-serif;
	}
</style>
